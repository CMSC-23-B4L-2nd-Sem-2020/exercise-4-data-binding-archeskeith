<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/keith_arches"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/nicknameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName|textPassword|phone"
        android:text="@string/name"
        android:visibility="gone"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/done_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/done" />

    <ImageView
        android:id="@+id/star_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_pellentesque_et_egestas_mi_cras_sit_amet_ligula_sed_elit_dignissim_lobortis_a_id_mauris_in_iaculis_tellus_nec_ante_egestas_nec_sagittis_enim_blandit_aliquam_ut_iaculis_ante_nullam_viverra_varius_justo_aliquet_mattis_in_finibus_ipsum_sem_consectetur_iaculis_risus_vulputate_ut_vivamus_imperdiet_tempus_fermentum_ut_dictum_feugiat_nisi_sollicitudin_bibendum_lectus_malesuada_sed_duis_laoreet_vestibulum_sem_in_tincidunt_eros_fermentum_sit_amet_vestibulum_et_purus_at_lacus_luctus_pretium_nam_sed_odio_metus_mauris_ultrices_vitae_odio_sit_amet_rhoncus_aenean_sit_amet_nisl_ut_erat_scelerisque_ullamcorper_sit_amet_nec_ipsum_in_mauris_dolor_tempor_vitae_urna_non_gravida_mattis_nulla_cras_sollicitudin_sodales_purus_convallis_sagittis_mauris_bibendum_nulla_sollicitudin_leo_posuere_fermentum_nam_maximus_lacus_non_pellentesque_efficitur_nisi_diam_aliquam_nisi_vehicula_tincidunt_elit_libero_ac_risus_etiam_ac_ex_enim_donec_augue_arcu_posuere_quis_ante_nec_convallis_condimentum_libero_vivamus_sagittis_felis_condimentum_tempor_maximus_etiam_sed_tellus_semper_volutpat_orci_quis_cursus_mi_nullam_rutrum_arcu_lorem_nec_vestibulum_ligula_congue_nec_curabitur_tortor_augue_mollis_id_convallis_in_gravida_at_sem_nullam_dignissim_leo_eu_varius_molestie_donec_cursus_neque_vel_feugiat_euismod_nam_fermentum_tellus_ipsum_quis_lobortis_ipsum_eleifend_vitae_quisque_tincidunt_nulla_id_efficitur_venenatis_libero_libero_feugiat_augue_sollicitudin_rutrum_sem_mi_eget_ante_sed_odio_leo_tristique_sit_amet_nunc_eget_laoreet_lacinia_augue_aenean_tincidunt_odio_quis_molestie_venenatis_proin_suscipit_nulla_nec_turpis_consectetur_sit_amet_pulvinar_ex_semper"
            android:textAlignment="viewStart" />
    </ScrollView>

</LinearLayout>